<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sisnot" transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:/sisnoti</jta-data-source>
		<class>br.com.sisnoti.modules.broker.Broker</class>
		<class>br.com.sisnoti.modules.client.Client</class>
		<class>br.com.sisnoti.modules.confignotification.ConfigNotification</class>
		<class>br.com.sisnoti.modules.event.Event</class>
		<class>br.com.sisnoti.modules.notification.Notification</class>
		<class>br.com.sisnoti.modules.user.User</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
